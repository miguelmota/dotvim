module.exports = function (grunt) {
  grunt.initConfig({
    pkg: grunt.file.readJSON('package.json'),
    jshint: {
      files: ['gruntfile.js'],
      options: {
        globals: {
          console: true,
          module: true,
          jQuery: true
        }
      }
    },
    concat: {
      options: {
        seperator: ';'
      },
      dist: {
        src: ['public/components/jquery/jquery.min.js', 'public/components/bootstrap/js/bootstrap.min.js', 'public/components/lodash/lodash.js', 'public/components/handlebars/handlebars.js', 'public/components/backbone/backbone.js', 'public/components/recorder/recorder.js', 'public/components/recorder/recorderWorker.js', 'public/js/templates/*.js', 'public/js/main.js'],
        dest: 'public/js/main.min.js'
      }
    },
    uglify: {
      options: {
        banner: '/*! <%= pkg.name %> <%= grunt.template.today("dd-mm-yyyy") %> */\n',
        preserveComments: false
      },
      dist: {
        files: {
          'public/js/main.min.js': ['<%= concat.dist.dest %>']
        }
      }
    },
    compass: {
      dist: {
        options: {
          config: 'public/config.rb'
        }
      }
    },
    htmlmin: {
      dist: {
        options: {
          removeComments: true,
          collapseWhitespace: true,
          removeRedundantAttributes: true,
          collapseBooleanAttributes: true
        },
        files: {
          'dist/views/index.ejs': 'views/index.ejs',
          'dist/views/tos.ejs': 'views/tos.ejs',
          'dist/views/landing.ejs': 'views/landing.ejs',
          'dist/views/partials/header.ejs': 'views/partials/header.ejs',
          'dist/views/partials/footer.ejs': 'views/partials/footer.ejs'
        }
      }
    },
    watch: {
      html: {
        files: ['views/*', 'views/**/*'],
        tasks: ['watch_html']
      },
      scripts: {
        files: ['public/js/*.js', 'views/templates/*.hbs'],
        tasks: ['watch_scripts']
      },
      css: {
        files: ['public/sass/*'],
        tasks: ['watch_css']
      }
    },
    handlebars: {
      compile: {
        files: {
          'public/js/templates/join.js': ['views/templates/join.hbs'],
          'public/js/templates/chat.js': ['views/templates/chat.hbs'],
          'public/js/templates/chat-list-item.js': ['views/templates/chat-list-item.hbs'],
          'public/js/templates/forgot-password.js': ['views/templates/forgot-password.hbs'],
          'public/js/templates/fullscreen-modal.js': ['views/templates/fullscreen-modal.hbs'],
          'public/js/templates/jumbotron-header.js': ['views/templates/jumbotron-header.hbs'],
          'public/js/templates/terms-of-service.js': ['views/templates/terms-of-service.hbs']
        }
      }
    },
    shell: {
      mycommand: {
        command: 'echo "my command"',
        options: {
          stdout: true
        }
      }
    },
  });
  grunt.loadNpmTasks('grunt-contrib-jshint');
  grunt.loadNpmTasks('grunt-contrib-concat');
  grunt.loadNpmTasks('grunt-contrib-uglify');
  grunt.loadNpmTasks('grunt-contrib-compass');
  grunt.loadNpmTasks('grunt-contrib-htmlmin');
  grunt.loadNpmTasks('grunt-contrib-watch');
  grunt.loadNpmTasks('grunt-contrib-handlebars');
  grunt.loadNpmTasks('grunt-shell');
  grunt.registerTask*('test', ['jshint']);
  grunt.registerTask('watch_scripts', ['handlebars', 'concat']);
  grunt.registerTask('watch_css', ['compass']);
  grunt.registerTask('watch_html', ['htmlmin']);
  grunt.registerTask('default', ['watch']);
};
